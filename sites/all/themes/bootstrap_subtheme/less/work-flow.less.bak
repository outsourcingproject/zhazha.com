ol, ul {
  list-style: none;
  padding: 0px;
}

.work-detail {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1000;

  .work-detail-mask {
    background-color: #202020;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
  }
  .work-show {
    margin-right: 340px;
    color: #fff;
  }
  .work-show {
    color: #fff;
    .work-show-wrap {
      padding: 0 126px;
    }
    .work-show-inner {
      position: relative;
    }
    .work-show-top {
      margin-bottom: 5px;
    }
    .btn-back {
      width: 64px;
      height: 64px;
      background-color: #333;
      position: absolute;
      top: 15px;
      left: -110px;
      transition: background-color .3s;
      -moz-transition: background-color .3s;
      -webkit-transition: background-color .3s;
      -o-transition: background-color .3s;
    }
    .work-show-bd {
      position: relative;
    }
    .work-show-wrap {
      padding: 0 126px;
      overflow: hidden;
    }
    .work-show-inner {
      position: relative;
    }
    .mod-operate {
      .operate-list-item {
        float: left;
        text-align: center;
        margin: 0 10px 0 0;
      }
      .operate-list-item {
        margin-right: 20px;
      }
    }
  }

  .work-list {
    overflow: hidden;
    li {
      margin-bottom: 20px;
      overflow: hidden;
      text-align: center;
      img {
        width: 100%;
        height: 100%;
      }
    }
  }

  .work-author-info {
    position: fixed;
    right: 0;
    top: 0px;
    //height: 100%;
    width: 340px;
    color: #404040;
    background-color: #fff;

    .work-actions {
      .action-item {
        width: 113px;
        border-left: 1px solid #e2e2e6;
      }
    }
  }

  .mod-actions {
    border-top: 1px solid #e2e2e6;
    border-bottom: 1px solid #e2e2e6;
    .action-item {
      border-left: 1px solid #e2e2e6;
      text-align: center;
      height: 62px;
      line-height: 62px;
      width: 170px;
      float: left;
      color: #404040;
      font-size: 14px;
      font-weight: bold;
      transition: background-color .3s;
      -moz-transition: background-color .3s;
      -webkit-transition: background-color .3s;
      -o-transition: background-color .3s;
    }

  }

  .work-author {
    .author-main {
      padding: 0 0 0 88px;
      position: relative;
      height: 95px;
    }
    .author-avatar {
      position: absolute;
      top: 20px;
      left: 17px;
    }
    .avatar-img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }
    .author-info {
      padding-top: 25px;
      .author-name {
        font-size: 18px;
        font-weight: bold;
        color: #404040;
      }
      .time {
        color: #b7b7b7;
        font-size: 14px;
        font-family: "Arial";
      }
    }

  }
  .work-intro {
    h4 {
      font-size: 14px;
      padding: 20px 0;
    }

    .work-intro-detail {
      .intro-detail-main {
        padding-left: 17px;
      }
      .detail-txt {
        line-height: 1.5;
        width: 298px;
        margin-bottom: 20px;
      }
      .work-tags {
        margin-bottom: 25px;
        margin-right: 10px;
      }
      .tags-list {
        margin-right: -7px;
        li {
          float: left;
          margin-right: 7px;
          _display: inline;
          margin-bottom: 5px;
        }
      }
    }
    .mod-actions {
      border-top: 1px solid #e2e2e6;
      border-bottom: 1px solid #e2e2e6;
    }
  }
}